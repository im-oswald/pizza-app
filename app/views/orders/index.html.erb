<div class='w-full text-center'>
  <h1 class='mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl'>
    <span class='text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400'>ORDERS SUMMARY</span>
  </h1>
  <hr />
  <% @orders.in_groups_of(2, false) do |chunk| %>
    <div class='flex flex-wrap'>
      <% chunk.each do |order| %>
        <%= render 'order', order: order %>
      <% end %>
    </div>
  <% end %>
</div>
